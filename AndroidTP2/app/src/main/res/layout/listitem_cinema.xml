        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/lblAdresse"
        android:layout_width="match_parent"
        android:layout_height="dp"
        android:layout_weight="3"
        android:gravity="center"
        android:textColor="#000000"
        />
</LinearLayout>